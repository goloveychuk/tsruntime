
{
    "compilerOptions": {
        "target": "es5",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "strict": true,
        "lib": ["dom", "es2015"],
        // "plugins": [
        //     { "transform": "./dist/transformer.js", "type": "program" },
        // ],
    },
    "include": [
        "src/**/*"
    ]
}